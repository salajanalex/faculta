drop schema `concurs` ;
CREATE SCHEMA `concurs` ;

DROP TABLE if exists `concurs`.`user`;
DROP TABLE if exists `concurs`.`participant`;
DROP TABLE if exists `concurs`.`cursa`;
DROP TABLE if exists `concurs`.`cursa_participant`;



CREATE TABLE `concurs`.`user` (
    `idUser` bigint NOT NULL AUTO_INCREMENT,
    `Password` VARCHAR(100) NOT NULL,
	`Username` VARCHAR(100) NOT NULL,
PRIMARY KEY (`idUser`));


  CREATE TABLE `concurs`.`participant` (
  `idParticipant` bigint NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(100) NOT NULL,
  `Team` VARCHAR(100) NULL,
  `Capacity` bigint NOT NULL,
  PRIMARY KEY (`idParticipant`));


CREATE TABLE `concurs`.`cursa` (
  `idCursa` bigint NOT NULL AUTO_INCREMENT,
  `Name` VARCHAR(100) NOT NULL,
  `Capacity` bigint NOT NULL,
  PRIMARY KEY (`idCursa`));

  CREATE TABLE `concurs`.`cursa_participant` (
    `idCursa` bigint NOT NULL,
    `idParticipant` bigint NOT NULL,
    FOREIGN KEY (`idCursa`) references cursa (`idCursa`),
    FOREIGN KEY (`idParticipant`) references participant (`idParticipant`));


