drop schema motocross ;
CREATE SCHEMA motocross ;

DROP TABLE if exists motocross.`user`;
DROP TABLE if exists motocross.`participant`;
DROP TABLE if exists motocross.`cursa`;
DROP TABLE if exists motocross.`cursa_participant`;


CREATE TABLE motocross.`user` (
    idUser bigint NOT NULL AUTO_INCREMENT,
	username VARCHAR(100) NOT NULL,
	password VARCHAR(100) NOT NULL,
PRIMARY KEY (idUser));


  CREATE TABLE motocross.`participant` (
  idParticipant bigint NOT NULL AUTO_INCREMENT,
  name VARCHAR(100) NOT NULL,
  team VARCHAR(100) NULL,
  capacity bigint NOT NULL,
  PRIMARY KEY (idParticipant));


CREATE TABLE motocross.`cursa` (
  idCursa bigint NOT NULL AUTO_INCREMENT,
  name VARCHAR(100) NOT NULL,
  capacity bigint NOT NULL,
  PRIMARY KEY (idCursa));

  CREATE TABLE motocross.`cursa_participant` (
    idCursaParticipant bigint NOT NULL AUTO_INCREMENT,
    idCursa bigint NOT NULL,
    idParticipant bigint NOT NULL,
    PRIMARY KEY (idCursaParticipant),
    FOREIGN KEY (idCursa) references cursa (idCursa),
    FOREIGN KEY (idParticipant) references participant (idParticipant));